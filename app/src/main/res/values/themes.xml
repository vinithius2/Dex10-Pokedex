<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema principal claro -->
    <style name="Theme.Dex10" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Cores principais -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secundárias -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Tema da Splash Screen -->
    <style name="Theme.Dex10.Splash" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_layer_list</item>
        <!-- Cor de fundo -->
        <item name="windowSplashScreenBackground">@color/red_black</item>
        <!-- Ícone animado da splash -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- Cor de fundo do ícone (círculo) -->
        <item name="windowSplashScreenIconBackgroundColor">@color/red_black</item>
        <!-- Tema usado depois da splash -->
        <item name="postSplashScreenTheme">@style/Theme.Dex10</item>

        <item name="android:icon">@mipmap/ic_launcher</item> <!-- Isso define o ícone -->
    </style>

</resources>
